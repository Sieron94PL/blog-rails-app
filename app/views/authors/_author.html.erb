<div data-author-id="<%= author.id %>" class="row rowHeight">
  <div class="col-sm-8 col-md-2"><%= link_to author.fullname, author_path(id: author.id), class: 'postTitle'%>
  </div>
  <div class="col-sm-8 col-md-2"><%= link_to 'Edit', edit_author_path(id: author.id), role: 'button', class: 'btn btn-primary'%>
  </div>
  <div class="col-sm-8 col-md-2"><%= link_to 'Delete', author_path(id: author.id), method: :delete, remote: true, data: { confirm: 'Are you sure?' }, role: 'button', class: 'btn btn-danger' %>
  </div>
</div>

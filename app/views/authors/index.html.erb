<h1>Authors</h1>
<img style="display: none;" src="https://i.redd.it/ounq1mw5kdxy.gif"/>

<table class="table authors">
  <% @authors.each do |author| %>
    <%= render 'author', author: author %>
  <% end %>
</table>
<hr/>

<div>
  <h1>New author</h1>
</div>
  <%= form_for @author, remote: true, format: :js, html: { class: 'new-author' } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'col-2'%>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :surname, class: 'control-label col-sm-2'%>
    <div class="col-sm-10">
      <%= f.text_field :surname, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :age, class: 'control-label col-sm-2'%>
    <div class="col-sm-10">
      <%= f.number_field :age, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Save', class: 'btn btn-default' %>
    </div>
  </div>
</div>
<% end %>

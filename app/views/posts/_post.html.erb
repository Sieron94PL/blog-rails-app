<% if @author %>
  <% @author.posts.each do |post| %>
    <div class="row rowHeight">
      <div class="col-sm-12 col-md-6">
        <div class="postTitle"><%= link_to post.title, post_path(id: post.id) %>
        </div>
      </div>
      <div class="col-sm-12 col-md-2"><%= link_to 'Edit', edit_post_path(id: post.id), role: 'button', class: 'btn btn-primary'%>
      </div>
      <div class="col-sm-12 col-md-2"><%= link_to 'Delete', post_path(id: post.id), method: :delete, remote: true, data: { confirm: 'Are you sure?' }, role: 'button', class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>
<% else %>
  <% Post.all.each do |post| %>
    <div class="row rowHeight">
      <div class="col-sm-12 col-md-6">
        <div class="postTitle"><%= link_to post.title, post_path(id: post.id) %>
        </div>
      </div>
      <div class="col-sm-12 col-md-2"><%= link_to 'Edit', edit_post_path(id: post.id), role: 'button', class: 'btn btn-primary'%>
      </div>
      <div class="col-sm-12 col-md-2"><%= link_to 'Delete', post_path(id: post.id), method: :delete, remote: true, data: { confirm: 'Are you sure?' }, role: 'button', class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>
<% end %>

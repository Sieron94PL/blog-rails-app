<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger">
      <%= msg %>
    </div>
  <% end %>
<% end %>

<div class="container">
  <%= form_for @post, class: 'form-horizontal' do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'control-label col-sm-2'%>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, class: 'control-label col-sm-2'%>
    <div class="col-sm-10">
      <%= f.text_area :content, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label Author, class: 'control-label col-sm-2'%>
    <div class="col-sm-10">
      <%= collection_select :post, :author_id, Author.all, :id, :fullname, {prompt: false}, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Save', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
</div>

<br/>
<div class="container">
  <%= form_for @comment do |f| %>
  <div class="form-group">
    <%= f.label :commentator_name, class: 'control-label col-sm-3'%>
    <div class="col-sm-10">
      <%= f.email_field :commentator_name, required: true, placeholder: 'Enter email', class: 'form-control form-control-sm' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, class: 'control-label col-sm-3'%>
    <div class="col-sm-10">
      <%= f.text_area :content, required: true, minlength: 10, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Add comment', class: 'btn btn-default' %>
    </div>
  </div>
</div>

<%= f.hidden_field(:post_id, value: @post.id) %>

<% end %>
